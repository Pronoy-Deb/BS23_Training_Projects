@{
	Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>Brochure Slider</title>
	<style>
		body {
			margin: 0;
			padding: 0;
			background: #f4f4f4;
			font-family: Arial, sans-serif;
			text-align: center;
			justify-content: center;
			align-items: center;
			height: 100vh;
		}

		.brochure-container {
			margin: 100px auto;
			max-width: 1000px;
			padding: 0;
			background: #fff;
			box-shadow: 0 0 0 rgba(0,0,0,0.1);
			border-radius: 10px;
		}

		.brochure-image {
			max-width: 100%;
			height: auto;
			border-radius: 8px;
			display: block;
			cursor: pointer;
			transition: opacity 0.5s ease-in-out;
		}

		h1 {
			margin-bottom: 20px;
			color: #333;
		}
	</style>
</head>
<body>
	<div class="brochure-container">
		<img id="brochureImage" class="brochure-image" src="~/images/brochure.png" alt="Brochure" />
	</div>

	<script>
		const images = [
			'@Url.Content("~/images/brochure.png")',
			'@Url.Content("~/images/brochure1.jpg")',
			'@Url.Content("~/images/brochure2.jpg")',
			'@Url.Content("~/images/brochure3.jpg")'
		];

		let currentIndex = 0;
		const imgElement = document.getElementById('brochureImage');

		function showNextImage() {
			currentIndex = (currentIndex + 1) % images.length;
			imgElement.src = images[currentIndex];
		}

		imgElement.addEventListener('click', showNextImage);

		setInterval(showNextImage, 3000);
	</script>
</body>
</html>
