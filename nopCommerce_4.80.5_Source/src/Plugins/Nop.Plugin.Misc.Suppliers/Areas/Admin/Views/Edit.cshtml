@model Nop.Plugin.Misc.Suppliers.Domain.SuppliersRecord

@{
	Layout = "_AdminLayout";
	ViewBag.Title = "Edit Supplier";
}

<div class="content-header clearfix">
	<h1 class="float-left">Edit Supplier</h1>
</div>

<div class="card card-default">
	<div class="card-body">
		<form asp-action="Edit" method="post" class="needs-validation" novalidate>
			<input type="hidden" asp-for="Id" />

			<div class="form-group row">
				<div class="col-md-6">
					<label asp-for="Name" class="control-label">Name</label>
					<input asp-for="Name" class="form-control" placeholder="Enter supplier name" />
					<span asp-validation-for="Name" class="text-danger small"></span>
				</div>
				<div class="col-md-6">
					<label asp-for="Email" class="control-label">Email</label>
					<input asp-for="Email" class="form-control" placeholder="Enter email address" />
					<span asp-validation-for="Email" class="text-danger small"></span>
				</div>
			</div>

			<div class="form-group row justify-content-center">
				<div class="col-md-4 text-center">
					<div class="form-check form-switch">
						<input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" />
						<label asp-for="IsActive" class="form-check-label">Active</label>
					</div>
				</div>
			</div>

			<div class="form-group text-center mt-4">
				<button type="submit" class="btn btn-success px-4">Update</button>
				<a asp-action="List" class="btn btn-outline-secondary ml-2">Back to List</a>
			</div>
		</form>
	</div>
</div>
